{% extends 'base.html.twig' %}

{% block title %}Modification de mot passe {% endblock %}

{% block body %}
{% for flashError in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}
<div class="container">
    <div class="row ">
        <div class="alert alert-secondary mt-5 mx-auto">
            <div class="alert-heading">
                <h3 class="mt-3 mb-3  display-5 text-muted text-center ">Modifier le mot passe</h3>
                <hr>
            
                    <div class="col-md-12  mx-auto form-ins mt-3">
                        {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                        {{ form_row(form.oldPassword) }}
                        {{ form_row(form.newPassword) }}
                        {{ form_row(form.confirmPassword) }}
                        <button class="btn btn-primary btn-block mb-3">Modifier</button>
                        {{ form_end(form) }}

                    </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}