{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}
    <div class="container">
        <div class="alert alert-secondary">
            <div class="alert-heading">
        <h1 class="mt-3 mb-3  display-5 text-muted text-center ">Créer un compte</h1>
        <hr>
        <div class="row "> 
                <div class="col-md-6 img-form">
                    <img src="{{asset('images/imageformulaire.png')}}" width="480px" class="img-fluid" alt"Image de formulaire">
                </div>
                <div class="col-md-6 form-ins mt-3">
                    {{ form_start(registrationForm , {attr: {'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-sm-1 col-md-6">
                            {{ form_row(registrationForm.prenom) }}
                            
                        </div>
                        <div class="col-sm-1 col-md-6">
                            {{ form_row(registrationForm.nom) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-1 col-md-6">
                            {{ form_row(registrationForm.telephone) }}
                        </div>
                        <div class="col-sm-1 col-md-6">
                            {{ form_row(registrationForm.password.first) }}
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-1 col-md-6">
                            {{ form_row(registrationForm.password.second) }}
                    
                        </div>
                        <div class="col-sm-1 col-md-6">
                            {{ form_row(registrationForm.nomEntreprise) }}
                    
                        </div>
                    </div>
                    <div class="row">
                        
                        <div class="col-sm-1 col-md-6">
                            {{ form_row(registrationForm.adresse) }}
                        </div>
                        <div class="col-sm-1 col-md-6">
                            {{ form_row(registrationForm.role) }}
                        </div>
                    
                    </div>
                    <div class="row">
                        <button type="submit" class="mx-3  btn btn-primary btn-block">Register</button>
                    </div>
                    <div class="text-center mt-2">
                            <small class="text-muted">
                            Si vous avez déja un compte  <a href="{{ path('app_login') }}">cliquer ici </a>
                            </small>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>  
    </div>
</div>
{% endblock %}
